#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int ratingCounters[11], i, response;
	for (i = 1; i <= 10; ++i)	// loop para zerar todos os elementos do array 
								// 
		ratingCounters[i] = 0;
	printf("Enter your responses\n");
	for (i = 1; i <= 20; ++i)
	{							// entrada das 20 notas scanf ("%i",
								// &response);
		if (response < 1 || response > 10)	// mensagem caso digite num errado 
											// 
			printf("Bad response: %i\n", response);
		else
			++ratingCounters[response];	// incrementando em 1 cada vez que uma 
										// nota é digitada. a quantidade de
										// cada resposta fica acumulada na
										// variável "response". } 
		printf("\n\nRating Number of Responses\n");
		printf("------ -------------------\n");
		for (i = 1; i <= 10; ++i)
			printf("%4i%14i\n", i, ratingCounters[i]);	// *parte que não
														// entendi 
		system("PAUSE");
		return 0;
	}
}