#include<stdio.h>
main()
{
float x, y, z, soma, produlto, media;
printf("Entre com 3 inteiro:\n");
scanf("%f%f%f", &x, &y, &z);
soma=x+y+z;
media=soma/3;
produlto=x*y*z;
printf("A soma é %.f\n", soma);
printf("A media é %.2f\n", media);
printf("O produlto é %.2f\n", produlto);
if(x>y)
if(x>z)
printf("O maior é %.1f\n", x);
if(x<y)
if(y>z)
printf("O maior é %.1f\n", y);
if(x<y)
if(y<z)
printf("O maior é %.1f\n", z);
if(x<y)
if(x<z)
printf("O menor é %.1f", x);
if(y<x)
if(y<z)
printf("O menor é %.1f", y);
if(z<x)
if(z<y)
printf("O menor é %.1f", z);
}