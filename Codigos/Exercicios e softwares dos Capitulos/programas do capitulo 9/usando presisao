/* Usando precisão ao imprimir inteiros, números de ponto flutuante e
   strings */
#include <stdio.h>
main()
{
	int i = 873;
	float f = 123.94536;
	char s[] = "Happy Rirthday";
	printf("Usando precisão para inteiros\n");
	printf("\t%.4d\n\t%.9d\n\n", i, i);
	printf("Usando precisão para números de ponto flutuante\n");
	printf("\t%.3f\n\t%.3e\n\t%.3g\n\n", f, f, f);
	printf("Usando precisão para strings\n");
	printf("\t%.lls\n", s);
	return 0;
}