			novo=(struct lista_arq *)malloc(sizeof(struct lista_arq));
			novo->proximo=nodo;
			anterior->proximo=novo;
			novo->nomearq=antrada;
		}
		
		nodo=inicio.proximo;
		
		while(nodo)
		{
			printf("%s\n", nodo->nomearq);
