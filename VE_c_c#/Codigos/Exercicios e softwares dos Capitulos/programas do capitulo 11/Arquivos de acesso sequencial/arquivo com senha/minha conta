#include<stdio.h>
void cria_conta(void)
{
	FILE *armaz;

	char conta[50];
	long int senha;

	printf("Digite sua conta: ");
	scanf("%s", conta);
	printf("Digite sua senha: ");
	scanf("%d", &senha);

	armaz = fopen(conta, "w");
	fprintf(armaz, "%d", senha);
	if(armaz!=NULL){
	printf("conta criada com sucesso, loge para continuar.\n");
	return 0;
	fclose(armaz);
	}
}

void acessa_conta(void)
{
	FILE *armaz, *armazena;

	char conta[50];
	long int senha, scan;

	printf("Digite sua conta: ");
	scanf("%s", conta);
	printf("Digite sua senha: ");
	scanf("%d", &senha);

	armaz = fopen(conta, "r");
	fscanf(armaz, "%d", &scan);
	if(senha==scan){
	char doc[50], escri[5000];
	printf("Digite o nome do doc: ");
	scanf("%s", doc);
	armazena=fopen(doc, "a");
	printf("Digite os dados: ");
	scanf("%s", escri);
	fprintf(armazena, "%s", escri);
	fclose(armazena);
	return 0;
	}
	else
	printf("Login ou senha não existe\n");
}

int main(void)  
{
int modo;
printf("1-entrar.\n2-cadastrar.\nqualquer para sair.\nDigite sua escolha: ");
scanf("%d", &modo);
switch(modo){
case 1:
acessa_conta();
break;
case 2:
cria_conta();
break;
default:
printf("\noperação fracassou. saindo em 3,2,1...");
break;
return 0;
}
}