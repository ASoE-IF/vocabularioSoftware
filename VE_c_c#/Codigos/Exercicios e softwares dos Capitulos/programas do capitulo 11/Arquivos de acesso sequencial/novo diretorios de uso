/* Um programa que lê arquivos e exibe-os na tela. */
#include <stdio.h>
#include <stdlib.h>
void main(int argc, char *argv[])
{
	FILE *fp;
	char ch;
	if (argc != 3)
	{
		puts("Você não informou o nome do arquivo e o modo ! ");
		exit(1);
		}
		if ((fp = fopen(argv[1], argv[2])) == NULL)
		{
			puts("O arquivo não pode ser aberto ! ");
			exit(1);
		}
		ch = getc(fp);
		while (ch != EOF)
		{
			putchar(ch);
			ch = getc(fp);
		}
		}