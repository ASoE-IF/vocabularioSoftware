#include <string.h>
#include <stdio.h>
void main(){
char c, nome[40], sobrenome[15];
int i;
printf ("Entre com um nome ");
scanf ("%s", nome);
printf (nome);
printf ("Entre com um sobrenome ");
scanf ("%s", sobrenome);
printf (nome);
strcat(nome, " ");
strcat(nome, sobrenome);
printf (nome);
printf ("Qual caractere? ");
c = getch();
for (i =0; i < strlen(nome); i++){
if (c == nome[i])
printf ("\n%d", i);
}}