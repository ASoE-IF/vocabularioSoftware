#include<stdio.h>

#define TAMANHO 5

void xyz1(int [], int);
void xyz2(int);
main(){
		int a[TAMANHO]={0, 1, 2, 3, 4};
		int i;
		printf("Efeitos de passar um array por meio "
		"de chamada por refeencia: \n\nOs valores do "
		"array original são:\n");
		
		for (i=0; i<=TAMANHO-1; i++)
				printf("%3d", a[i]);
		printf("\n");
		
		xyz1(a, TAMANHO);
		printf("Os valores do array modificados são:\n");
		for (i=0; i<=TAMANHO-1; i++)
				printf("%3d", a[i]);
				
		printf("\n\nEfeitos de passar elementos do array por meio "
		"de uma chamada por valor:\n\nO valor de a[3] e %d\n", a[3]);
		
		xyz2(a[3]);
		printf("O valor de a[3]  e %d\n", a[3]);
		
		return 0;
		}
		int j;
		void xyz1(int b[],  int tamanho){
		for  (j  = 0;  j  <= tamanho - 1; j++)
		b[j]   *= 2;
		}
		
		void xyz2(int e){
		printf("Valor em modificaElemento e %d\n",  e *= 2);
}