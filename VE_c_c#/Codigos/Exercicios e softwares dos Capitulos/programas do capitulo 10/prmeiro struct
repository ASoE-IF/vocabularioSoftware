/* Usando os operadores de membro de estrutura e de ponteiro de estrutura */
#include <stdio.h>
struct carta
{
	char *face;
	char *naipe;
};

main()
{
	struct carta a;
	struct carta *aPtr;
	a.face = "As";
	a.naipe = "Espadas";
	aPtr = &a;
	printf("%s%s%s\n%s%s%s\n%s%s%s\n", a.face, " de ", a.naipe, aPtr->face,
		   " de ", aPtr->naipe, (*aPtr).face, " de ", (*aPtr).naipe);
	return 0;
}