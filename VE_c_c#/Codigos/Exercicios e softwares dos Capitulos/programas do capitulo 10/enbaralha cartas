/* Programa de embaralhamento e distribuição de cartas usando estruturas */
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

struct carta
{
	char *face;
	char *naipe;
};
typedef struct carta Carta;
void completaBaralho(Carta *, char *[], char *[]);
void embaralhar(Carta *);
void distribuir(Carta *);

int main(void)
{
	Carta baralho[52];
	char *face[] = {"As","Dois","Tres","Quatro","Cinco","Seis",
						  	"Sete","Oito","Nove","Dez", "Valete","Dama","Rei"};
	
	char *naipe[]    =   {"Copas",   "Ouros",   "Paus", "Espadas"};
	srand((unsigned)time(NULL));
	
	completaBaralho(baralho, face, naipe);
	embaralhar(baralho);
	distribuir(baralho);

return 0;
}

void completaBaralho(Carta *wBaralho,  char *wFace[],  char *wNaipe[])
{
	int i;
	
	for  (i = 0;   i < 52;   i++){
	wBaralho[i].face = wFace[i % 13];
	wBaralho[i].naipe = wNaipe[i / 13];
	}
}

void embaralhar(Carta *wBaralho)
{
	int i, j;
	Carta temp;
	for  (i = 0;   i < 52;   i++){
	j  = rand() % 52;
	temp = wBaralho[i];
	wBaralho[i]  = wBaralho[j];
	wBaralho[j]   = temp;
	}
}

void distribuir(Carta *wBaralho[])
{
	int i;
	for  (i = 0;   i < 52; i++)
	printf("%6s de %-7s\.f\n", wBaralho[i].face, wBaralho[i].naipe(i + 1)%2);
}