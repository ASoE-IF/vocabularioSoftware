#include<stdio.h>
#include<time.h>

int main(void)
{

	int dado1, dado2, jogo,  statos, ponto;
	srand((unsigned)time(NULL));
	printf("Jogo de dados.\n\n");
	dado1 = rand() % 6 + 1;
	dado2 = rand() % 6 + 1;
	jogo = dado1 + dado2;
	switch (jogo)
	{

	case 7:
	case 11:
		ponto = dado1 + dado2;
		printf("ponto = %d + %d = %d\n", dado1, dado2, ponto);
		if (jogo == 7)
		{
			printf("ponto = 7\n");
			printf("O jogado obteve %d + %d = %d.\nO jogador venceu.\n", dado1,
				   dado2, jogo);
		}
		else
		{
			printf("ponto = 11\n");
			printf("O jogado obteve %d + %d = %d.\nO jogador venceu.\n", dado1,
				   dado2, jogo);
		}
		statos = 1;
		return 0;

	case 2:
	case 3:
	case 12:

		ponto = dado1 + dado2;
		printf("ponto = %d + %d = %d\n", dado1, dado2, ponto);
		if (jogo == 2)
		{
			printf("ponto = 2\n");
			printf("O jogado obteve %d + %d = %d.\nO jogador perdeu.\n", dado1,
				   dado2, jogo);
		}
		if (jogo == 3)
		{
			printf("ponto = 3\n");
			printf("O jogado obteve %d + %d = %d.\nO jogador perdeu.\n", dado1,
				   dado2, jogo);
		}
		if (jogo == 12)
		{
			printf("O jogado obteve %d + %d = %d.\nO jogador perdeu.\n", dado1,
				   dado2, jogo);
		}

		statos = 2;
		return 0;

	default:
		statos = 0;
		ponto = dado1 + dado2;
		printf("ponto = %d + %d = %d\n", dado1, dado2, ponto);
		break;
	}
	
	while (statos == 0)
	{
		dado1 = rand() % 6 + 1;
		dado2 = rand() % 6 + 1;
		jogo = dado1 + dado2;
		printf("O jogado obteve %d + %d = %d.\n", dado1, dado2, jogo);
		if ((jogo == 2) || (jogo == 3) || (jogo == 12))
		{
			printf("O jogador perdeu.\n");
			statos = 2;
		}

		else if (jogo == ponto)
		{
			printf("O jogado venceu.\n");
			statos = 1;
		}
	}
	return 0;
}